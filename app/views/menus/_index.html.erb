 <!--トレーニングメニュー一覧-->
 <div class="row-12">
    <div class="col-4 mx-auto">
      <h2 class="text-center my-5">My Training</h2>
    </div>
    <!--ログインしているユーザと詳細なので受け取ったidで条件分岐-->
    <% if user_signed_in? && current_user.id.to_s == params[:id] %>
    <div class="col-4 mx-auto">
      <h5 class="text-center my-5"><%= link_to "トレーニングメニューの登録", new_menu_path, class:"btn btn-link  btn-sm mypage_edit" %></h2>
    </div>
    <div class="col">
      <table class="table text-center">
        <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.training_menu %></td>
          <td>
            <%= link_to "削除",menu_path(menu.id), class:"btn btn-danger  btn-sm ", method: :delete %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <% else %>
      <div class="col">
      <table class="table text-center">
        <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.training_menu %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <% end %>
  </div>