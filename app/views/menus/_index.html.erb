 <!--トレーニングメニュー一覧-->
 <div class="row-12 slide-bottom show">
    <div class="col-8 col-md-8 mx-auto">
      <h2 class="text-center my-5"><i class="fas fa-dumbbell"></i> My Training</h2>
    </div>
    <div class="col-8 col-md-8 mx-auto">
      <% if user.id == current_user.id %>
      <h5 class="text-center my-5"><%= link_to "トレーニングメニューの登録", new_menu_path, class:"btn btn-link  btn-sm mypage_edit" %></h5>
      <% end %>
    </div>
    <div class="col">
      <table class="table text-center">
        <% @menus.each do |menu| %>
        <tr>
          <td><%= menu.training_menu %></td>
          <td>MAX <%= menu.training_contents.maximum(:weight) %> Kg</td>
          <td>
            <% if menu.user.id == current_user.id %>
            <%= link_to "削除",menu_path(menu.id), class:"btn btn-outline-danger  btn-sm ", method: :delete, remote: true %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
