<!--トレーニングメニュー新規作成画面-->
<div class="col-md-3 mx-auto slide-bottom show">
      <h2 class="mt-3 text-center"><i class="fab fa-elementor"></i> Create Menu</h2>

        <%= form_with model: @menu, url: menus_path, local:true do |f| %>
          <table class="table">
            <tr><td>
            <div class="form-group text-center">
              <label for="training_menu">メニュー登録</label>
                <%= f.text_field :training_menu, placeholder:"メニューを入力" %>
            </div>
            </td></tr>
            <tr><td>
              <div class="form-group text-center">
                <%= f.submit "Create menu" %>
              </div>
            </td></tr>
            <tr><td class="text-center"><%= link_to "Back", :back, class:"btn btn-link  btn-sm mypage_edit" %></td></tr>
          </table>
      <% end %>
    </div>