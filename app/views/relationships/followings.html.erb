<div class="container">
  <div class="row">
    <div class="col text-center mt-5">
      <h2>Follow User</h2>
    </div>
    <div class="col-md-12 mt-5 text-center">
      <%= link_to "Other Usersへ戻る", users_path, class:"btn btn-link  btn-sm mypage_edit" %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-11 offset-md-1 mx-auto'>
   <% if @users.exists? %>
   <table class="table text-center my-5">
        <tr><th></th><th>名前</th><th>性別</th><th>フォロー数</th><th>フォロワー数</th><th></th><th>登録日</th></tr>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", :size =>'60x60' %>
            <% end %>
          </td>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.gender %></td>
          <td><% user ||= current_user %><a href= "<%= user_follwings_path(user) %>"><%= user.followings.count %></a></td>
          <td><% user ||= current_user %><a href= "<%= user_follwers_path(user) %>"><%= user.followers.count %></a></td>
          <td><%= render 'relationships/follow_button',user: user %></td>
          <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <% end %>
      </table>
   <% else %>
    <p class="text-center h3 my-5">Follow Userはいません</p>
   <% end %>
  </div>
 </div>
</div>