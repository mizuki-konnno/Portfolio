<!--今ログインしているUserは参照しているUserをフォローしているか？-->
<% if current_user.following?(user) %>
  <%= link_to "フォローを外す", user_relationships_path(user), class:"btn btn-outline-secondary", method: :delete, remote:true %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), class:"btn btn-outline-secondary", method: :post, remote:true %>
<% end %>



