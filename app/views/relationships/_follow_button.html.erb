<!--自分を表示させない-->
<% unless current_user == user %>
<!--今ログインしているUserは参照しているUserをフォローしているか？-->
<% if current_user.following?(user) %>
  <%= link_to "フォローを外す", user_relationships_path(user.id), class:"btn btn-outline-secondary", method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), class:"btn btn-outline-secondary", method: :post %>
<% end %>
<% end %>